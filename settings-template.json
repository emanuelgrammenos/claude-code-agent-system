{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "read",
      "Edit",
      "CreateFile",
      "ReadFile",
      "SaveFile",
      "Bash(npm *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(less *)",
      "Bash(more *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(locate *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(pwd)",
      "Bash(echo *)",
      "Bash(which *)",
      "Bash(whereis *)",
      "Bash(node *)",
      "Bash(npx *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(pip list)",
      "Bash(pip show *)",
      "Bash(file *)",
      "Bash(stat *)",
      "Bash(wc *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(diff *)",
      "save",
      "search"
    ]
  },
  "hooks": {
    "user-prompt-submit": {
      "script": "echo 'MANDATORY: Global agentic workflow is active. Always coordinate through control-agent for multi-step tasks. Control-agent MUST delegate to specialized agents and never execute tasks directly. Import global workflow: @~/.claude/CLAUDE.md'",
      "context": "system"
    }
  },
  "model": "sonnet"
}